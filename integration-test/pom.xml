    <profiles>
        <profile>
            <id>test-01-os-name-contains-mac</id>
            <!-- should pass on Macs but not other platforms -->
            <activation>
                <property>
                    <name>[FINER.ACTIVATOR.CONTAINS]os.name</name>
                    <value>mac</value>
                </property>
            </activation>
        </profile>
